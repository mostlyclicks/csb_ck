<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to checking.name, refinery.checkings_admin_checking_path(checking) %> <%= t('.said') %>
    <span class="preview"><%= truncate(strip_tags(sanitize(checking.message)), :length => 60) -%></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), refinery.checkings_admin_checking_path(checking),
                :class => "cancel confirm-delete",
                :title => t('.delete_checking'),
                :'data-confirm' => t('shared.admin.delete.message', :title => checking.name),
                :'data-method' => "delete" -%>

    <%= link_to refinery_icon_tag('zoom.png'), refinery.checkings_admin_checking_path(checking),
                :title => t('.read_checking') -%>
  </span>
</li>
