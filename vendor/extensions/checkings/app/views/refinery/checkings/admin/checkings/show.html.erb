<div id='records'>
  <h2><%= t('.checking') %></h2>
  <table id='checking' class='checking'>
      <tr>
        <td>
          <strong>
            <%= t('.first_name', :default => t('activerecord.attributes.checking.first_name')) %>
          </strong>
        </td>
        <td>
          <%= @checking.first_name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.last_name', :default => t('activerecord.attributes.checking.last_name')) %>
          </strong>
        </td>
        <td>
          <%= @checking.last_name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.checking.email')) %>
          </strong>
        </td>
        <td>
          <%= @checking.email %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.phone', :default => t('activerecord.attributes.checking.phone')) %>
          </strong>
        </td>
        <td>
          <%= @checking.phone %>
        </td>
      </tr>
      <tr>
        <td valign='top'>
          <strong>
            <%= t('.additional_comments', :default => t('activerecord.attributes.checking.additional_comments')) %>
          </strong>
        </td>
        <td>
          <p style='margin-top: 0px'>
            <% @checking.message.to_s.gsub("\r\n\r\n", "\r\n").split("\r\n").each_with_index do |sentence, index| %>
              <%=raw "</p><p>" unless index == 0 %>
              <%= sentence %>
            <% end %>
          </p>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@checking.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
    <%= link_to t('.back_to_all_checkings'), refinery.checkings_admin_checkings_path,
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete_checking', :scope => 'refinery.checkings.admin.checkings.checking'),
                  refinery.checkings_admin_checking_path(@checking),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete_checking', :scope => 'refinery.checkings.admin.checkings.checking'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @checking.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
