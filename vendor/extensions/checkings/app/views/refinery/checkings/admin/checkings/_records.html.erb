<%= render 'refinery/admin/search_header', :url => refinery.checkings_admin_checkings_path %>
<% if searching? %>
  <% if @checkings.any? %>
    <ul>
      <%= render :partial => 'checking', :collection => @checkings %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_checkings.any? -%>
    <% @grouped_checkings.each do |container| %>
      <h3><%= l((checking_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'checking', :collection => checking_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_checkings', :scope => 'refinery.checkings.admin.checkings.index') %></strong>
    </p>
  <% end -%>
<% end %>
