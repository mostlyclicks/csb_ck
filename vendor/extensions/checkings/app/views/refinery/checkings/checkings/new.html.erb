<style>
  .errorExplanation {
    padding:15px;
    background-color:red;
    color:white;
    border-radius:10px;
  }
</style>


<section >
<div class="container" id="smiley-face">
  <div class="row">
    <div class="col-6 offset-3 col-md-4 offset-md-0 col-lg-3">
      <%= link_to (image_tag 'Get-More-Logo.png', class: 'img-fluid'), 'https://www.citizensstatebank.us/personal-banking/get-more-checking' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 offset-md-7" id="bubble">
      <%= image_tag 'Speech-Bubble---Narrow-text.png', class: 'img-fluid' %>
    </div>
  </div>





  <div class="row">
    <div class="col-md-7"></div>
    <div class="col-md-5">
    <div class='checkings'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first[:slug].to_sym) %>

    <%= form_for [refinery, :checkings, @checking] do |f| %>
       
      <%= render '/refinery/admin/error_messages',
                 :object => @checking,
                 :include_object_name => true,
                 :class => 'alert alert-primary'  %>

      <div class='field first_name_field string_field form-group'>
        <%= f.label :first_name, class: 'invisible' %>
        <%= f.text_field :first_name, placeholder: 'First Name (required)', class: 'form-control' %>
      </div>

      <div class='field last_name_field string_field form-group'>
        <%= f.label :last_name, class: 'invisible'  %>
        <%= f.text_field :last_name,  placeholder: 'Last Name (required)', class: 'form-control' %>
      </div>

      <div class='field email_field string_field form-group'>
        <%= f.label :email, class: 'invisible'  %>
        <%= f.text_field :email, placeholder: 'Email (required)',  class: 'form-control' %>
      </div>

      <div class='field phone_field string_field form-group'>
        <%= f.label :phone, class: 'invisible'  %>
        <%= f.text_field :phone, placeholder: 'Phone (required)',  class: 'form-control' %>
      </div>

      <div class='field additional_comments_field text_field form-group'>
        <%= f.label :additional_comments, class: 'invisible'  %>
        <%= f.text_area :additional_comments, placeholder: 'Additional comments...',  :rows => 5, class: 'form-control' %>
      </div>

      <div>
        <%= recaptcha_tags %><br/>
      </div>

      <div class='actions'>
        <%= f.submit ('Send me more info'), class: 'btn btn-lg btn-danger' %>
      </div>
    <% end %>
  </div>
    </div>
  </div>
</div>
</section>
